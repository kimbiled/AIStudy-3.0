// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())

    username String @unique
    password String

    email       String  @unique
    emailStatus Boolean @default(false)

    name String?

    progress Progress?

    sessions Session[]

    createdAt DateTime @default(now())
    alteredAt DateTime @default(now()) @updatedAt()

    @@map("Users")
}

model Session {
    id String @id @default(uuid())

    ip       String
    device   String
    location String

    expirationDate DateTime

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String

    createdAt DateTime @default(now())
    alteredAt DateTime @default(now()) @updatedAt()

    @@map("Sessions")
}

model Progress {
    id String @id @default(uuid())

    date      DateTime?
    current   Float?
    expecting Float?

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String @unique

    createdAt DateTime @default(now())
    alteredAt DateTime @default(now()) @updatedAt()

    @@map("Progresses")
}

model Writing {
    id String @id @default(uuid())

    type  Int
    topic String

    imagePath String?

    createdAt DateTime @default(now())
    alteredAt DateTime @default(now()) @updatedAt()

    @@map("Writings")
}

model Speaking {
    id String @id @default(uuid())

    part      Int
    questions String[]
    topic     String?

    createdAt DateTime @default(now())
    alteredAt DateTime @default(now()) @updatedAt()

    @@map("Speakings")
}
